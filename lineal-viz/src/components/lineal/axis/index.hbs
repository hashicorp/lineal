<g class='axis' ...attributes>
  {{#if this.includeDomain}}
    <path class='domain' stroke='currentColor' d={{this.domainPath}}></path>
  {{/if}}
  {{#if (eq this.direction 'horizontal')}}
    {{#each this.ticks key='@index' as |tick index|}}
      <g transform={{tick.transform}}>
        {{#if (has-block)}}
          {{yield tick index}}
        {{else}}
          <line stroke='currentColor' y2={{tick.size}}></line>
          {{#if tick.label}}
            <text
              fill='currentColor'
              y={{tick.offset}}
              dy={{tick.textOffset}}
              text-anchor={{tick.textAnchor}}
            >{{tick.label}}</text>
          {{/if}}
        {{/if}}
      </g>
    {{/each}}
  {{else}}
    {{#each this.ticks key='@index' as |tick index|}}
      <g transform={{tick.transform}}>
        {{#if (has-block)}}
          {{yield tick index}}
        {{else}}
          <line stroke='currentColor' x2={{tick.size}}></line>
          {{#if tick.label}}
            <text
              fill='currentColor'
              x={{tick.offset}}
              dy={{tick.textOffset}}
              text-anchor={{tick.textAnchor}}
            >{{tick.label}}</text>
          {{/if}}
        {{/if}}
      </g>
    {{/each}}
  {{/if}}
</g>
