{{#if this.isStacked}}
  <g>
    {{#each this.bars as |series|}}
      <g>
        {{#each series.bars as |b|}}
          <rect
            x={{b.x}}
            y={{b.y}}
            width={{b.width}}
            height={{b.height}}
            fill={{series.fill}}
            class={{series.cssClass}}
            ...attributes
          ></rect>
        {{/each}}
      </g>
    {{/each}}
  </g>
{{else}}
  <g>
    {{#each this.bars as |b|}}
      <rect x={{b.x}} y={{b.y}} width={{b.width}} height={{b.height}} ...attributes></rect>
    {{/each}}
  </g>
{{/if}}
