{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "declaration": true,
    "types": ["ember-source/types"]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "glint": {
    "environment": "ember-loose",
    "transform": {
      "include": ["src/**"]
    }
  }
}
