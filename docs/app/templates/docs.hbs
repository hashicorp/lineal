<div class='docs'>
  <DocfyOutput @scope='docs' as |node|>
    <nav>
      <ul>
        {{#each node.pages as |page|}}
          <li>
            <DocfyLink @to={{page.url}} @activeClass='active'>
              {{page.title}}
            </DocfyLink>
          </li>
        {{/each}}
      </ul>
    </nav>
  </DocfyOutput>

  <main>
    <article>
      <p class='brand'>
        Lineal
        <p>cool branding here</p>
      </p>
      <div>
        {{outlet}}
      </div>

      <DocfyPreviousAndNextPage as |previous next|>
        <div>
          Previous:
          {{#if previous}}
            <DocfyLink @to={{previous.url}}>{{previous.title}}</DocfyLink>
          {{/if}}
        </div>
        <div>
          Next:
          {{#if next}}
            <DocfyLink @to={{next.url}}>{{next.title}}</DocfyLink>
          {{/if}}
        </div>
      </DocfyPreviousAndNextPage>
    </article>
  </main>
</div>
